{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ESNext",
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "lib": ["ESNext"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["./build"]
}
