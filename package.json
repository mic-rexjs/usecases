{
  "name": "@rex-js/usecases",
  "version": "1.3.38",
  "description": "Usecases of Clean Architecture",
  "private": true,
  "keywords": [
    "clean architecture",
    "usecase",
    "entity",
    "mic-usecases",
    "rexjs"
  ],
  "scripts": {
    "build:dist": "webpack --config ./webpack.config.ts",
    "build:lib": "tsc --project ./tsconfig.prod.json",
    "prebuild": "yarn run test && rm -rf ./build",
    "build": "yarn run build:dist && yarn run build:lib",
    "pub:build": "yarn run build && npm publish ./build",
    "lint-all": "eslint src/* --ext .tsx,.ts",
    "test": "jest --config=./jest.config.ts",
    "test-staged": "jest --config=./jest.config.ts --findRelatedTests $(git diff --name-only --cached) --passWithNoTests"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "unpkg": "dist/index.min.js",
  "files": [
    "lib",
    "dist",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/china-liji/mic-usecases"
  },
  "homepage": "https://github.com/china-liji/mic-usecases#README.md",
  "author": {
    "name": "Michael Lee",
    "email": "hello_zaizi@163.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/plugin-transform-runtime": "^7.22.7",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-typescript": "^7.22.5",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-angular": "^17.6.6",
    "@jest/globals": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.31.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.5.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.5",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "lint-staged": {
    "./**/*.{js,ts,tsx}": "eslint"
  }
}